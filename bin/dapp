#!/usr/bin/env ruby
# -*- mode: ruby -*-
# vi: set ft=ruby :

require 'rubygems'
require 'dapp'

begin
  Dapp::CLI.new.run
rescue NetStatus::Exception => e
  net_status = e.net_status.net_status_normalize(context: e.net_status.delete(:context))
  $stderr.puts(net_status[:message] ||
                 [net_status[:error], net_status[:code]].compact.join(': '))
  exit 1
rescue Interrupt => _e
  $stderr.puts('Interrupted')
  exit 1
end
